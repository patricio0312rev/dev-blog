---
import { ViewTransitions } from "astro:transitions";
import "@/styles/global.css";
import { Navbar } from "@/components/layout/Navbar";
import { Footer } from "@/components/layout/Footer";
import { SITE_CONFIG } from "@/constants";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import { toISODateTimeUTC } from "@/utils";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: "website" | "article";
  publishDate?: string;
  updatedDate?: string;
  category?: string;
  tags?: string[];
  canonicalUrl?: string;
  noIndex?: boolean;
}

const {
  title,
  description = SITE_CONFIG.description,
  ogImage = "/og-image.png",
  ogType = "website",
  publishDate,
  updatedDate,
  category,
  tags = [],
  canonicalUrl,
  noIndex = false,
} = Astro.props;

const fullTitle =
  title === "Home" ? SITE_CONFIG.title : `${title} Â· ${SITE_CONFIG.title}`;
const canonical = canonicalUrl || Astro.url.href;
const ogImageUrl = new URL(ogImage, Astro.site).href;
const publishDateISO = publishDate ? toISODateTimeUTC(publishDate) : undefined;
const updatedDateISO = updatedDate ? toISODateTimeUTC(updatedDate) : undefined;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <slot name="head" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content={SITE_CONFIG.author} />

    <!-- Canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Robots -->
    {
      noIndex ? (
        <meta name="robots" content="noindex, nofollow" />
      ) : (
        <meta name="robots" content="index, follow" />
      )
    }

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content={SITE_CONFIG.name} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:creator" content="@patricio0312rev" />

    <!-- Article specific (for blog posts) -->
    {
      ogType === "article" && publishDate && (
        <>
          <meta property="article:published_time" content={publishDateISO} />
          {updatedDateISO && (
            <meta property="article:modified_time" content={updatedDateISO} />
          )}
          <meta property="article:author" content={SITE_CONFIG.author} />
          {category && (
            <meta property="article:section" content={category} />
          )}
          {tags.map((tag) => (
            <meta property="article:tag" content={tag} />
          ))}
        </>
      )
    }

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" sizes="32x32" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`${SITE_CONFIG.name} RSS Feed`}
      href="/rss.xml"
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- Theme script (before render to prevent flash) -->
    <script is:inline>
      function applyTheme() {
        const stored = localStorage.getItem("theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        const theme =
          stored === "light" || stored === "dark"
            ? stored
            : prefersDark
              ? "dark"
              : "light";
        document.documentElement.setAttribute("data-theme", theme);
      }

      // Apply immediately
      applyTheme();

      // Re-apply after View Transitions swap the DOM
      document.addEventListener("astro:after-swap", applyTheme);
      document.addEventListener("astro:page-load", applyTheme);
    </script>

    <!-- View Transitions -->
    <ViewTransitions />
  </head>
  <body
    class="min-h-screen bg-zinc-50 text-zinc-900 antialiased transition-colors duration-200 dark:bg-zinc-950 dark:text-zinc-50"
  >
    <Navbar client:load />

    <main class="mx-auto w-full max-w-5xl px-4 pb-16 pt-24 sm:px-6 lg:px-8">
      <slot />
    </main>

    <Footer />

    <Analytics />
    <SpeedInsights />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: SITE_CONFIG.name,
        url: Astro.site?.href,
        author: {
          "@type": "Person",
          name: SITE_CONFIG.author,
          url: "https://patriciomarroquin.dev",
        },
      })}
    />

    <!-- Keyboard shortcuts -->
    <script is:inline>
      function initKeyboardShortcuts() {
        let currentArticleIndex = -1;

        document.addEventListener("keydown", (e) => {
          // Ignore if typing in an input or textarea
          if (
            e.target instanceof HTMLInputElement ||
            e.target instanceof HTMLTextAreaElement ||
            e.target.isContentEditable
          ) {
            return;
          }

          // Ignore if modifier keys are pressed (except for search)
          if (e.altKey || e.ctrlKey || e.metaKey) {
            return;
          }

          switch (e.key.toLowerCase()) {
            case "t": {
              // Toggle theme
              const html = document.documentElement;
              const currentTheme = html.getAttribute("data-theme");
              const newTheme = currentTheme === "dark" ? "light" : "dark";
              html.setAttribute("data-theme", newTheme);
              localStorage.setItem("theme", newTheme);
              break;
            }

            case "j":
            case "k": {
              // Navigate articles (j = next, k = previous)
              const articles = Array.from(
                document.querySelectorAll('a[href^="/blog/"]')
              ).filter((a) => {
                // Filter to only article links in lists, not nav or other areas
                const href = a.getAttribute("href");
                return href && href !== "/blog" && !a.closest("nav") && !a.closest("footer");
              });

              if (articles.length === 0) return;

              if (e.key.toLowerCase() === "j") {
                currentArticleIndex = Math.min(currentArticleIndex + 1, articles.length - 1);
              } else {
                currentArticleIndex = Math.max(currentArticleIndex - 1, 0);
              }

              const target = articles[currentArticleIndex];
              if (target) {
                target.focus();
                target.scrollIntoView({ behavior: "smooth", block: "center" });
              }
              break;
            }

            case "g": {
              // Go to articles page
              if (window.location.pathname !== "/blog") {
                window.location.href = "/blog";
              }
              break;
            }

            case "h": {
              // Go home
              if (window.location.pathname !== "/") {
                window.location.href = "/";
              }
              break;
            }
          }
        });
      }

      initKeyboardShortcuts();
      document.addEventListener("astro:page-load", initKeyboardShortcuts);
    </script>
  </body>
</html>
